<div class="col-6 col-md-4 col-lg-3">
    <div class="m-3">
        <div class="position-relative">
            <% if local_assigns[:photo] || local_assigns[:album].photos.present? %>
                <img class="rounded w-100" src=<%= local_assigns[:isAlbum] ? local_assigns[:album].photos[0].image.url : local_assigns[:photo].image.url ? local_assigns[:photo].image.url : asset_path("image-regular.svg") %> alt="Media Image">
            <% end %>
            <% if local_assigns[:isPrivate] %>
                <i class="fa-solid fa-lock bg-white position-absolute rounded-circle p-1 top-0 end-0"></i>
            <% end %>
            <% if local_assigns[:isSelf] && %>
                <a href="<%= local_assigns[:isAlbum] ? edit_album_path(local_assigns[:album].id) : local_assigns[:photo].title != nil ? edit_photo_path(local_assigns[:photo].id) : "#" %>"><button class="btn edit-media-button rounded-pill position-absolute bottom-0 end-0 py-0 px-1 text-white">EDIT</button></a>
            <% end %>
            <% if local_assigns[:isAlbum] %>
                <div class="rounded-circle fw-bold p-3 photo-counter position-absolute top-50 start-50 translate-middle text-center text-white">
                    <div class="m-0 fs-2"><%= local_assigns[:album].photos.count %></div>
                    <div class="fs-lg-2 fs-sm-4">PHOTOS</div>
                </div>
            <% end %>
        </div>
        <div class="text-center mt-2"><%= local_assigns[:album] ? local_assigns[:album].title : local_assigns[:photo].title %></div>
    </div>
</div>