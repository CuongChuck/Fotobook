<% content_for :title, "Fotobook Signup" %>

<div class="col-6 col-md-5 col-lg-4 col-xxl-3 py-3 mx-auto text-center">
    <h1>Fotobook Signup</h1>
    <div class="mt-3 py-3 login-options border rounded">
        <a href="https://accounts.google.com/signin" target="_blank"><i class="icon fa-brands fa-google fa-3x px-lg-4 px-sm-3 px-2" id="google"></i></a>
        <a href="https://facebook.com/login" target="_blank"><i class="icon fa-brands fa-facebook fa-3x px-lg-4 px-sm-3 px-2" id="facebook"></i></a>
        <a href="https://x.com/i/flow/login" target="_blank"><i class="icon fa-brands fa-square-x-twitter fa-3x px-lg-4 px-sm-3 px-2" id="X"></i></a>
    </div>
    <%= form_with(model: User, as: :user, url: user_registration_path, local: true) do |f| %>
        <div class="form my-3 px-4 py-4 mx-auto d-flex flex-column rounded text-start">
            <div class="container mb-3">
                <%= f.label :first_name, class: "form-label" %>
                <%= f.text_field :fname, class: "form-control", placeholder: "First Name", required: true, maxlength: 25, autofocus: true %>
            </div>
            <div class="container mb-3">
                <%= f.label :last_name, class: "form-label" %>
                <%= f.text_field :lname, class: "form-control", placeholder: "Last Name", required: true, maxlength: 25 %>
            </div>
            <div class="container mb-3">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true, maxlength: 255 %>
            </div>
            <div class="container mb-3">
                <%= f.label :password, class: "form-label" %>
                <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true, maxlength: 64 %>
            </div>
            <div class="container mb-3">
                <%= f.label :password_confirmation, class: "form-label" %>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation", required: true, maxlength: 64 %>
            </div>
            <%= f.submit "Signup", class: "authorize-button btn px-4 mt-3 mx-auto" %>
        </div>
    <% end %>
</div>