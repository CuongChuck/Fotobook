<% content_for :title, "Fotobook Login" %>

<div class="col-6 col-md-5 col-lg-4 col-xxl-3 py-4 mx-auto text-center">
    <h1>Fotobook Login</h1>
    <div class="mt-3 py-3 login-options border rounded">
        <a href="https://accounts.google.com/signin" target="_blank"><i class="icon fa-brands fa-google fa-3x px-lg-4 px-sm-3 px-2" id="google"></i></a>
        <a href="https://facebook.com/login" target="_blank"><i class="icon fa-brands fa-facebook fa-3x px-lg-4 px-sm-3 px-2" id="facebook"></i></a>
        <a href="https://x.com/i/flow/login" target="_blank"><i class="icon fa-brands fa-square-x-twitter fa-3x px-lg-4 px-sm-3 px-2" id="X"></i></a>
    </div>
    <%= form_with(model: User, as: :user, url: user_session_path, method: :post, local: true) do |f| %>
        <div class="form my-4 px-4 pb-4 mx-auto d-flex flex-column align-items-center rounded">
            <i class="fa-solid fa-circle-user fa-5x my-5"></i>
            <%= f.email_field :email, class: "form-control mb-3", placeholder: "Email", required: true, autofocus: true %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
            <%= f.submit "Login", class: "authorize-button btn px-4 mt-4" %>
            <a class="mt-4 text-link" href="#">Forgot password?</a>
        </div>
    <% end %>
    <a class="text-link" href=<%= new_user_registration_path %>>Create an account</a>
</div>