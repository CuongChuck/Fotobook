<div class="col col-12 col-lg-6">    
    <div class="d-flex flex-row bg-body-secondary p-1 post my-2 mx-2">
        <div class="overflow-hidden image-wrapper">
            <img class="w-100 h-100 photo-image" src=<%= photo.image.url ? photo.image.url : asset_path("image-regular.svg") %> data-bs-toggle="modal" data-bs-target="#photo-content">
        </div>
        <div class="container d-grid pe-1">
            <div class="d-flex flex-row justify-content-between align-items-center">
                <div class="d-flex flex-row">
                    <a href="<%= photos_path(photo.user.id) %>" class="">
                        <% if photo.user.avatar %>
                            <img class="rounded-circle avatar-sm" src=<%= photo.user.avatar.image.url %> alt=<%= photo.user.fname + " " + photo.user.lname %>>
                        <% else %>
                            <%= render partial: "application/ava", locals: { fname: photo.user.fname, lname: photo.user.lname } %>
                        <% end %>
                    </a>
                    <a href="<%= photos_path(photo.user.id) %>" class="my-auto mx-2">
                        <h6 class="my-auto postor"><%= "#{photo.user.fname} #{photo.user.lname}" %></h6>
                    </a>
                </div>
                <% if !local_assigns[:follow] && user_signed_in? && (photo.user.id != current_user.id) %>
                    <%= turbo_frame_tag photo.user, class: "follow-button-#{photo.user.id}" do %>
                        <%= render partial: "application/follow", locals: { user: photo.user } %>
                    <% end %>
                <% end %>
            </div>
            <h5 class="fs-5 mt-2 photo-title overflow-hidden"><%= photo.title %></h5>
            <p class="photo-description overflow-hidden"><%= photo.description %></p>
            <div class="d-flex flex-row justify-content-between align-items-center align-self-end">
                <%= turbo_frame_tag photo do %>
                    <%= render partial: "application/like", locals: { photo: photo } %>
                <% end %>
                <p class="time my-0"><%= l photo.updated_at, format: :timestamp %></p>
            </div>
        </div>
    </div>
</div>